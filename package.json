{
  "name": "santa-close-client",
  "version": "1.0.0",
  "repository": "https://github.com/santa-close/santa-close-client.git",
  "author": "santa-close",
  "private": true,
  "scripts": {
    "build:ds": "yarn workspace santa_close_design-system build",
    "build:common": "yarn workspace santa_close_common build",
    "build": "yarn build:ds && yarn build:common",
    "dev:watch": "yarn build:ds --watch & yarn build:common --watch",
    "dev:frame": "yarn workspace santa_close_frame dev",
    "dev:map": "yarn dev:watch & yarn workspace santa_close_map dev",
    "dev:and": "yarn workspace santa_close_app and",
    "dev:ios": "yarn workspace santa_close_app ios",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "type-check": "yarn workspaces run type-check",
    "lint": "yarn workspaces run lint",
    "clean": "npx lerna clean -y && npx lerna run clean && rm -rf build node_modules"
  },
  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-router-dom": "^5.3.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.16.5",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "babel-jest": "^27.4.5",
    "eslint": "^8.4.0",
    "eslint-config-airbnb": "19.0.2",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.2.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-unicorn": "^39.0.0",
    "jest": "^27.4.5",
    "lerna": "^4.0.0",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.1",
    "tslib": "^2.3.1",
    "typescript": "^4.6.3"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/santa_close_app",
      "**/santa_close_app/**"
    ]
  },
  "engines": {
    "node": ">=16",
    "yarn": ">=1.22"
  }
}
